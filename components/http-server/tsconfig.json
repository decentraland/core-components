{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": ["node", "jest"],
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
} 